<div id="question-topbar" class="topbar small-12 medium-8 large-6 small-centered columns row">
  <h2>All Questions</h2>
</div>

<script>
  $(document).ready(function() {
    let contentPlacement = $('#question-topbar').position().top + $('#question-topbar').outerHeight();
    $('#content').css('margin-top', contentPlacement+20);
  });
</script>

<div id="content">
  <% @questions.each do |question| %>
    <a href='/questions/<%= question.id %>' style="text-transform: none;">
      <div class="tile">
        <h1><%= question.text %></h1>
        <h2 style="color: black;">ID: <%= question.id %> | STATUS: <%= question.status.upcase %></h2>
      </div>
    </a>
  <% end %>
</div>
