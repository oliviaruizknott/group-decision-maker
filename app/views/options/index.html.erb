<div class="question-header small-12 medium-8 large-6 small-centered columns row">
  <h1>QUESTION</h1>
  <h2><%= @question.text %></h2>
</div>

<div class="empty-div"></div>

<% if @options %>
  <% @options.each do |option| %>
    <div class="option-tile">
      <%= option.text %>
      <p><%= option.notes %></p>
    </div>
  <% end %>
<% end %>

<%= render 'layouts/flash_messages' %>

