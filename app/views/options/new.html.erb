<div id="question-topbar" class="topbar small-12 medium-8 large-6 small-centered columns row">
  <h2>QUESTION</h2>
  <h1><%= @question.text %></h1>
</div>

<script>
  $(document).ready(function() {
    let contentPlacement = $('#question-topbar').position().top + $('#question-topbar').outerHeight();
    $('#content').css('margin-top', contentPlacement+20);
  });
</script>

<div id="content">
  <div id="options-new" data-id="<%= @question.id %>"></div>
</div>
